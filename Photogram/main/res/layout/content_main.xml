<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/image_preview"
        android:scaleType="fitCenter"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_above="@id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:orientation="horizontal"
            android:padding="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:padding="16dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_filter_list"
                        android:padding="16dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/card_back_color"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_broken_image_white_24dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <TextView
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="Filters"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:padding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_edit"
                        android:padding="16dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/card_back_color"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_edit_white_24dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <TextView
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="Edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:padding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_brush"
                        android:padding="16dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/card_back_color"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_brush_white_24dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <TextView
                                android:textAlignment="center"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="Brush"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:padding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_emoji"
                        android:padding="16dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/card_back_color"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_insert_emoticon_white_24dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <TextView
                                android:textAlignment="center"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="Emoji"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:padding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_add_text"
                        android:padding="16dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/card_back_color"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_text_fields_white_24dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <TextView
                                android:textAlignment="center"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:padding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_add_image"
                        android:padding="16dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/card_back_color"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_image_white_24dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <TextView
                                android:textAlignment="center"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="Image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
            android:padding="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/btn_add_frame"
                    android:padding="16dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="@color/card_back_color"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_filter_frames_white_24dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />

                        <TextView
                            android:textAlignment="center"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:text="Frames"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:padding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_crop"
                        android:padding="16dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/card_back_color"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_crop_white_24dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <TextView
                                android:textAlignment="center"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="Crop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:padding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_back"
                        android:padding="16dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/card_back_color"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_arrow_back_white_24dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <TextView
                                android:textAlignment="center"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="Back"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:padding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_forward"
                        android:padding="16dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/card_back_color"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_arrow_forward_white_24dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <TextView
                                android:textAlignment="center"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="Forward"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:padding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_AI"
                        android:padding="16dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/card_back_color"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_center_focus_strong_white_24dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <TextView
                                android:textAlignment="center"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="AI"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        
    </HorizontalScrollView>

